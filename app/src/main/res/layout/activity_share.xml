<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px">
        <ImageView
            android:id="@+id/img_back_shareactivity"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"
            android:layout_width="9px"
            android:layout_height="16px"
            android:src="@mipmap/back3x"/>
        <TextView
            android:textSize="18px"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="74px"
            android:layout_height="25px"
            android:text="分享美哒"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="237px"

        >
            <ImageView
                android:layout_marginTop="42px"
                android:id="@+id/img_logo"
                android:layout_width="96px"
                android:layout_height="96px"
                android:src="@mipmap/logo3x"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_marginTop="24px"
                android:gravity="center"
                android:id="@+id/tv_01"
                android:layout_below="@id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="邀请同行参与，同行注册成功"
                android:textSize="14px"
                />
            <TextView
                android:layout_marginTop="12px"
                android:layout_below="@id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="您将获得30元奖励"
                android:textColor="@color/black"
                android:textSize="18px"
                />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#EEEEEE"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟同行说点什么吧"
        android:textSize="16px"
        android:layout_marginLeft="12px"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66CCCCCC"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="\n内容"
        android:gravity="top"
        android:textSize="14px"
        android:layout_marginLeft="12px"
        android:background="@null"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE">
        <TextView
            android:id="@+id/submit"
            android:layout_centerInParent="true"
            android:layout_width="220px"
            android:layout_height="48px"
            android:text="邀请同行"
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_marginBottom="55px"
            android:background="@mipmap/tijiaorenwu3x"/>
    </RelativeLayout>
</LinearLayout>
