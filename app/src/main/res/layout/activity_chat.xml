<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:background="#F8F8F8"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/img_back_chat_activity"
            android:layout_centerVertical="true"
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_marginLeft="12px"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:src="@mipmap/back3x"/>
        <TextView
            android:textSize="18px"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="37px"
            android:layout_height="25px"
            android:textColor="#121212"
            android:text="张三"
            />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_above="@+id/lin_01"
            android:id="@+id/rel_01"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/et_01"
                android:layout_width="match_parent"
                android:layout_height="28px"
                android:hint="    我来说一句"
                android:textSize="14px"
                android:textColorHint="#D6D6D6"
                android:layout_marginLeft="12px"
                android:layout_marginRight="12px"
                android:background="@mipmap/shurukuang3x"/>
            <ImageView
                android:layout_width="18px"
                android:layout_height="18px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36px"
                android:src="@mipmap/fasong3x"
                android:layout_marginTop="5px"
                />
        </RelativeLayout>
       <LinearLayout
           android:id="@+id/lin_01"
           android:layout_alignParentBottom="true"
           android:layout_width="match_parent"
           android:layout_height="36px"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="28px"
               android:layout_height="28px"
               android:layout_weight="1"
               android:layout_gravity="center_vertical"
               android:src="@mipmap/biaoqing3x"/>
           <ImageView
               android:layout_width="28px"
               android:layout_height="28px"
               android:layout_weight="1"
               android:layout_gravity="center_vertical"
               android:src="@mipmap/shipin3x"/>
           <ImageView
               android:layout_width="28px"
               android:layout_height="28px"
               android:layout_weight="1"
               android:layout_gravity="center_vertical"
               android:src="@mipmap/tupian3x"/>
           <ImageView
               android:layout_width="28px"
               android:layout_height="28px"
               android:layout_weight="1"
               android:layout_gravity="center_vertical"
               android:src="@mipmap/yuyin3x"/>
       </LinearLayout>
    </RelativeLayout>
</LinearLayout>
