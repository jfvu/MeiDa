<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_head"
            android:layout_width="match_parent"
            android:layout_height="257px"
            android:background="@mipmap/bg">
            <LinearLayout
                android:id="@+id/ln_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:layout_width="96px"
                    android:layout_height="96px"
                    android:src="@mipmap/head3x"
                    android:layout_marginTop="60px"
                    />
                <TextView
                    android:layout_marginTop="12px"
                    android:layout_width="58px"
                    android:layout_height="20px"
                    android:textColor="@color/whiletext"
                    android:text="美搭医生"
                    android:textSize="14px"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="303px"
            android:layout_height="80px"
            android:background="@mipmap/cardbg3x"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="217px">
            <LinearLayout
                android:id="@+id/lin_income"
                android:layout_width="151px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                >
                <ImageView
                    android:layout_width="18px"
                    android:layout_height="19.5px"
                    android:src="@mipmap/gold3x"
                    android:layout_marginTop="12px"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="17px"
                    android:gravity="center"
                    android:text="1230"
                    android:textSize="12px"
                    android:layout_marginTop="0.5px"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/yellowtext"/>
                <TextView
                    android:layout_width="50px"
                    android:layout_height="17px"
                    android:layout_marginTop="6px"
                    android:layout_marginBottom="8px"
                    android:textSize="12px"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:text="收入总额"
                    android:textColor="@color/yellowtext"/>
            </LinearLayout>
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:background="@mipmap/line3x"/>
            <LinearLayout
                android:id="@+id/lin_withdraw"
                android:layout_alignParentRight="true"
                android:layout_width="151px"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="18px"
                    android:layout_height="19.5px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12px"
                    android:src="@mipmap/bankcard3x"
                    />
                <TextView
                    android:layout_width="15px"
                    android:layout_height="17px"
                    android:text="30"
                    android:layout_marginTop="0.5px"
                    android:textSize="12px"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="50px"
                    android:layout_height="17px"
                    android:layout_marginTop="6px"
                    android:layout_marginBottom="8px"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12px"
                    android:text="收入总额"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="16px"
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#EEEEEE"></ImageView>
    <RelativeLayout
        android:id="@+id/rel_work"
        android:layout_width="match_parent"
        android:layout_height="56px"
        >
        <ImageView
            android:paddingLeft="12px"
            android:id="@+id/img"
            android:layout_centerVertical="true"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_marginLeft="12px"
            android:background="@mipmap/work3x"
            />
        <TextView
            android:layout_toRightOf="@id/img"
            android:layout_width="66px"
            android:layout_marginLeft="8px"
            android:layout_height="22px"
            android:text="任务进度"
            android:layout_centerVertical="true"
            android:textSize="16px"/>
        <ImageView

            android:layout_centerVertical="true"
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"
            android:background="@mipmap/next3x"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66CCCCCC"/>

    <RelativeLayout
        android:id="@+id/rel_share"
        android:layout_width="match_parent"
        android:layout_height="56px">

        <ImageView
            android:id="@+id/imgr"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"
            android:paddingLeft="12px"
            android:background="@mipmap/share3x" />

        <TextView
            android:layout_width="66px"
            android:layout_height="22px"
            android:layout_marginLeft="8px"
            android:layout_toRightOf="@id/imgr"
            android:layout_centerVertical="true"
            android:text="分享美哒"
            android:textSize="16px" />

        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"
            android:background="@mipmap/next3x" />
    </RelativeLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#EEEEEE"></ImageView>
    <RelativeLayout
        android:id="@+id/rel_set"
        android:layout_width="match_parent"
        android:layout_height="56px"
        >
        <ImageView
            android:layout_marginLeft="12px"
            android:id="@+id/imga"
            android:layout_centerVertical="true"
            android:layout_width="24px"
            android:layout_height="24px"
            android:background="@mipmap/set3x"
            />
        <TextView
            android:layout_toRightOf="@id/imga"
            android:layout_width="66px"
            android:layout_height="22px"
            android:text="设置中心"
            android:layout_marginLeft="8px"
            android:layout_centerVertical="true"
            android:textSize="16px"/>
        <ImageView
            android:layout_marginRight="12px"
            android:layout_centerVertical="true"
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_alignParentRight="true"
            android:background="@mipmap/next3x"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"></ImageView>

</LinearLayout>
