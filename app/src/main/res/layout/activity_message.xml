<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">
    <LinearLayout
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/rl_message_activity"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_below="@id/view_title"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/tv_title_message_activity"
            android:layout_width="74px"
            android:layout_height="25px"
            android:layout_centerInParent="true"
            android:text="通知中心"
            android:textSize="18px"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/img_readed_message_activity"
            android:layout_width="51px"
            android:layout_height="match_parent"
            android:text="全部已读"
            android:gravity="center"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
        <ImageView
            android:id="@+id/img_back_message_activity"
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_centerVertical="true"
            android:background="@mipmap/back3x"
            android:layout_marginTop="12px"
            android:layout_marginLeft="12px"/>
    </RelativeLayout>
    <com.example.jiaofeng.meida.refreshandupload.OrdinaryPDLView
        android:id="@+id/refreshupload_message_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_message_activity">
        <com.example.jiaofeng.meida.refreshandupload.MyRecyclerView
            android:id="@+id/recycler_message_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.example.jiaofeng.meida.refreshandupload.MyRecyclerView>
    </com.example.jiaofeng.meida.refreshandupload.OrdinaryPDLView>
</RelativeLayout>