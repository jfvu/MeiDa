<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px">
        <ImageView
            android:id="@+id/img_back_forgetword_activity"
            android:layout_centerVertical="true"
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_margin="12px"
            android:src="@mipmap/back3x"/>
        <TextView
            android:layout_centerInParent="true"
            android:textSize="18px"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:text="忘记交易密码"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#EEEEEE"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19px"
            android:layout_marginLeft="12px"
            android:text="请输入131****6059收到的短信验证码"
            android:layout_centerInParent="true"
            android:textSize="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56px"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="68px"
            android:layout_height="22px"
            android:text="验证码"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:textColor="@color/black"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="22px"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:layout_marginRight="12px"
            android:textColor="@color/blue"
            android:textSize="16px"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EEEEEE"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56px"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="22px"
            android:hint="707282"
            android:textColorHint="@color/blue"
            android:textSize="16px"
            android:background="@null"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="32px"
            android:layout_height="20px"
            android:layout_alignParentRight="true"
            android:text="59秒"
            android:textColor="#323232"
            android:textSize="14px"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE">
        <TextView
            android:id="@+id/next_forgetwordactivity"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="295px"
            android:background="@mipmap/tijiaorenwu3x"
            android:layout_width="220px"
            android:layout_height="48px"
            android:text="确认提交"
            android:textColor="@color/blue"
            android:textSize="18px"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>