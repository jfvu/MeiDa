<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/pdl_footer_padding_top"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/pdl_tv_down"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pdl_pull_tv_height"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/pulls"
        android:gravity="center_vertical"
        android:text="@string/pdl_down"
        android:textColor="@android:color/black"
        android:textSize="@dimen/pdl_text_size" />

    <LinearLayout
        android:id="@+id/ordinary_pdl_lin_f"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ordinary_pdl_load_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/loading"/>

        <TextView
            android:id="@+id/ordinary_pdl_tv_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="@string/pdl_loading"
            android:textSize="17sp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>
</RelativeLayout>