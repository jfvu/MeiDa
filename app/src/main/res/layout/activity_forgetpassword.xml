<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#ffffff"
        ></LinearLayout>
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="96px"
        android:layout_height="96px"
        android:src="@mipmap/logo3x"
        android:layout_marginTop="64px"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/ll1_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="80px">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/phonenumber3x"
            android:layout_marginLeft="58px"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_phonenumber_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:hint="请输入手机号"
            android:textColorHint="#CCCCCC"
            android:textSize="17px"
            android:layout_marginLeft="12px"
            android:background="@null"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_line1_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        android:layout_below="@id/ll1_forgetpassword"
        android:layout_marginTop="5px"
        android:layout_marginLeft="57px"
        android:layout_marginRight="57px"/>
    <LinearLayout
        android:id="@+id/ll_getcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1_forgetpassword"
        android:layout_marginTop="16px"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="58px"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_getcode_change"
                android:layout_width="128px"
                android:layout_height="34px"
                android:hint="请输入验证码"
                android:gravity="center"
                android:textColorHint="#CCCCCC"
                android:textSize="17px"
                android:background="@null"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:layout_width="128px"
                android:layout_height="1px"
                android:background="#cccccc"
                android:layout_marginTop="5px"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/but_getcode_change"
            android:layout_width="100px"
            android:layout_height="30px"
            android:textSize="14px"
            android:layout_marginLeft="16px"
            android:background="@mipmap/getcode3x"
            android:text="获取验证码"
            android:textColor="#CCCCCC"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_getcode"
        android:layout_marginTop="16px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/password3x"
            android:layout_marginLeft="57px"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_password_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12px"
            android:hint="请输入密码"
            android:textSize="17px"
            android:gravity="center"
            android:textColorHint="#CCCCCC"
            android:inputType="textPassword"
            android:background="@null"/>
    </LinearLayout>
<ImageView
    android:id="@+id/img_line2_forgetpassword"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#cccccc"
    android:layout_below="@id/ll2_forgetpassword"
    android:layout_marginTop="5px"
    android:layout_marginLeft="57px"
    android:layout_marginRight="57px"/>
    <Button
        android:id="@+id/but_finish_change"
        android:layout_width="220px"
        android:layout_height="48px"
        android:layout_below="@id/img_line2_forgetpassword"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/login3x"
        android:layout_marginTop="77px"
        android:text="完成修改"
        android:textSize="18px"
        android:textColor="#029FE8"/>



</RelativeLayout>