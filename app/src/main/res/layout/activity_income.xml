<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px">
        <ImageView
            android:id="@+id/img_back_imcome_activity"
            android:layout_centerVertical="true"
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_marginLeft="12px"
            android:layout_marginTop="12px"
            android:layout_marginBottom="12px"
            android:src="@mipmap/back3x"/>
        <TextView
            android:textSize="18px"
            android:layout_centerInParent="true"

            android:gravity="center"
            android:layout_width="74px"
            android:layout_height="25px"
            android:text="收入总额"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:layout_marginTop="8px"
        >
        <TextView
            android:layout_width="68px"
            android:layout_height="22px"
            android:text="收入总额"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_marginTop="17px"
            android:layout_marginBottom="17px"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="21px"
            android:layout_height="22px"
            android:layout_alignParentRight="true"
            android:text="62"
            android:textColor="@color/blue"
            android:layout_marginRight="12px"
            android:textSize="16px"/>
    </RelativeLayout>
    <TextView
        android:layout_width="55px"
        android:layout_height="18px"

        android:textSize="13px"
        android:layout_marginLeft="12px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:text="收入明细"
        android:textColor="@color/blue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57px"
        >
        <TextView
            android:id="@+id/tv_01"
            android:layout_width="88px"
            android:layout_height="20px"
            android:text="任务完成奖励"
            android:layout_marginTop="8px"
            android:layout_marginLeft="12px"
            android:textSize="14px"/>
        <TextView
            android:layout_marginTop="5px"
            android:layout_marginLeft="12px"
            android:layout_below="@id/tv_01"
            android:layout_width="63px"
            android:layout_height="16px"
            android:text="2017.05.25"
            android:textSize="11px"
            android:textColor="@color/blue"/>
        <TextView
            android:layout_width="28px"
            android:layout_height="20px"
            android:text="+60"
            android:textSize="14px"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57px"
        android:layout_marginTop="1px">
        <TextView
            android:id="@+id/tv_02"
            android:layout_width="88px"
            android:layout_height="20px"
            android:text="分享APP奖励"
            android:textSize="14px"
            android:layout_marginLeft="12px"
            android:layout_marginTop="8px"/>
        <TextView
            android:layout_marginTop="5px"
            android:layout_below="@id/tv_02"
            android:layout_width="63px"
            android:layout_height="16px"
            android:text="2017.05.25"
            android:textSize="11px"
            android:layout_marginLeft="12px"
            android:textColor="@color/blue"/>
        <TextView
            android:layout_width="28px"
            android:layout_height="20px"
            android:text="+60"
            android:textSize="14px"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE">
        <TextView
            android:id="@+id/income"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_centerHorizontal="true"
            android:layout_width="220px"
            android:layout_height="48px"
            android:text="申请提现"
            android:textSize="18px"
            android:textColor="@color/blue"
            android:gravity="center"
            android:background="@mipmap/tijiaorenwu3x"/>
    </RelativeLayout>

</LinearLayout>
