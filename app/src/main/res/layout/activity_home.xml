<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg3x"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

     <ImageView
         android:id="@+id/img_notification_main"
         android:layout_width="18px"
         android:layout_height="24px"
         android:padding="10px"
         android:background="@mipmap/notification3x"
         android:layout_alignParentRight="true"
         android:layout_marginTop="32px"
         android:layout_marginRight="12px"/>
    <ImageView
        android:id="@+id/img_logo_main"
        android:layout_width="96px"
        android:layout_height="96px"
        android:src="@mipmap/logo3x"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_notification_main"
        android:layout_marginTop="60px"/>
    <TextView
        android:id="@+id/tv_name_main"
        android:layout_width="82px"
        android:layout_height="28px"
        android:text="美哒医生"
        android:textSize="20px"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_logo_main"
        android:layout_marginTop="16px"/>
    <ImageView
        android:id="@+id/img_chat_main"
        android:layout_width="140px"
        android:layout_height="140px"
        android:src="@mipmap/chat3x"
        android:layout_below="@+id/tv_name_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72px"/>
    <TextView
        android:id="@+id/tv_chat_main"
        android:layout_width="22px"
        android:layout_height="28px"
        android:text="12"
        android:textSize="20px"
        android:textColor="#BC18DF"
        android:layout_toRightOf="@id/img_chat_main"
        android:layout_alignTop="@id/img_chat_main"
        android:layout_marginLeft="-53px"
        android:layout_marginTop="20px"
        />
    <ImageView
        android:id="@+id/img_my_main"
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@mipmap/my3x"
        android:layout_below="@id/tv_name_main"
        android:layout_marginTop="40px"
        android:layout_toLeftOf="@id/img_chat_main"
        android:layout_marginRight="8px"/>
    <ImageView
        android:id="@+id/img_information_main"
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@mipmap/information3x"
        android:layout_below="@id/img_my_main"
        android:layout_toRightOf="@id/img_chat_main"
        android:layout_marginLeft="-14px"
        android:layout_marginTop="44px"/>
    <TextView
        android:id="@+id/tv_information_main"
        android:layout_width="10px"
        android:layout_height="13px"
        android:text="12"
        android:textSize="9px"
        android:textColor="#BC18DF"
        android:layout_below="@id/img_information_main"
        android:layout_toRightOf="@id/img_information_main"
        android:layout_marginTop="-53px"
        android:layout_marginLeft="-20px"
        />
    <ImageView
        android:id="@+id/img_join_main"
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@mipmap/join3x"
        android:layout_below="@id/img_chat_main"
        android:layout_marginTop="5px"
        android:layout_toLeftOf="@id/img_chat_main"
        android:layout_marginRight="-32px"/>
    <TextView
        android:id="@+id/tv_join_main"
        android:layout_width="10px"
        android:layout_height="13px"
        android:text="12"
        android:textSize="9px"
        android:textColor="#BC18DF"
        android:layout_toRightOf="@id/img_join_main"
        android:layout_below="@id/img_chat_main"
        android:layout_marginLeft="8px"
        android:layout_marginTop="11px"
        />

</RelativeLayout>
