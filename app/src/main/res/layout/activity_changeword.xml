<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#ffffff"/>
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="44px">
        <ImageView
            android:id="@+id/img_back_changeword_activity"
            android:layout_centerVertical="true"
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_marginLeft="12px"
            android:src="@mipmap/back3x"/>
        <TextView
            android:textSize="18px"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="110px"
            android:layout_height="25px"
            android:text="修改交易密码"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="12px"
        android:textSize="16px"
        android:layout_width="wrap_content"
        android:layout_height="19px"
        android:text="请输入旧的交易密码"
        android:gravity="center"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="351px"
        android:layout_height="40px"
        android:background="@mipmap/shurumima3x"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12px"/>
    <TextView
        android:textSize="16px"
        android:layout_width="wrap_content"
        android:layout_height="19px"
        android:text="请输入新的交易密码"
        android:layout_marginTop="12px"
        android:gravity="center"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="351px"
        android:layout_height="40px"
        android:layout_marginTop="12px"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/shurumima3x"/>
    <TextView
        android:textSize="16px"
        android:layout_width="wrap_content"
        android:layout_height="19px"
        android:text="请再次输入以确认"
        android:layout_marginTop="12px"
        android:gravity="center"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="351px"
        android:layout_height="40px"
        android:layout_marginTop="12px"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/shurumima3x"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE">
        <TextView
            android:id="@+id/next_changewordactivity"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="210px"
            android:layout_centerHorizontal="true"
            android:layout_width="220px"
            android:layout_height="48px"
            android:text="确认修改"
            android:textSize="18px"
            android:textColor="@color/blue"
            android:gravity="center"
            android:background="@mipmap/tijiaorenwu3x"/>
    </RelativeLayout>
</LinearLayout>