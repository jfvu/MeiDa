<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <ImageView
        android:id="@+id/img_logo_register"
        android:layout_width="96px"
        android:layout_height="96px"
        android:src="@mipmap/logo3x"
        android:layout_marginTop="84px"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/ll1_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:orientation="horizontal"
        android:layout_below="@id/img_logo_register">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="58px"
            android:src="@mipmap/phonenumber3x"/>
        <EditText
            android:id="@+id/et_phonenumber_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12px"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:hint="请输入手机号"
            android:textSize="17px"
            android:background="@null"
            android:textColorHint="#CCCCCC"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_line_register"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll1_register"
        android:layout_marginTop="5px"
        android:background="#cccccc"
        android:layout_marginLeft="57px"
        android:layout_marginRight="57px"
        />
    <LinearLayout
        android:id="@+id/ll_getcode_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_line_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15px"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="58px">
            <EditText
                android:id="@+id/et_getcode_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:textSize="17px"
                android:textColorHint="#CCCCCC"
                android:layout_gravity="center_horizontal"
                android:background="@null"/>
            <ImageView
                android:layout_width="128px"
                android:layout_height="1px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5px"
                android:background="#cccccc"/>
        </LinearLayout>
       
        <Button
            android:id="@+id/but_getcode_register"
            android:layout_width="102px"
            android:layout_height="32px"
            android:background="@mipmap/getcode3x"
            android:layout_marginLeft="15px"
            android:text="获取验证码"
            android:textSize="12sp"
            android:textColor="#CCCCCC"
            android:layout_gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_getcode_register"
        android:layout_marginTop="16px"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/password3x"
            android:layout_marginLeft="58px"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_password_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="请输入密码"
            android:textSize="17px"
            android:textColorHint="#CCCCCC"
            android:inputType="textPassword"
            android:layout_marginLeft="12px"
            android:background="@null"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_line1_register"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        android:layout_below="@id/ll2_register"
        android:layout_marginTop="5px"
        android:layout_marginLeft="57px"
        android:layout_marginRight="57px"/>
    <TextView
        android:id="@+id/tv_deal_register"
        android:layout_width="258px"
        android:layout_height="20px"
        android:layout_below="@id/img_line1_register"
        android:layout_marginTop="16px"
        android:gravity="center"
        android:text="注册即同意《美哒医生APP 服务协议》"
        android:textColor="#CCCCCC"
        android:textSize="14px"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/but_finish_register"
        android:layout_width="220px"
        android:layout_height="48px"
        android:layout_below="@id/tv_deal_register"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/login3x"
        android:layout_marginTop="48px"
        android:text="确认注册"
        android:textColor="#029FE8"/>
    <TextView
        android:id="@+id/tv_back_register"
        android:layout_width="124px"
        android:layout_height="22px"
        android:text="已有账号，请登陆"
        android:textColor="#CCCCCC"
        android:textSize="16px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24px"/>

</RelativeLayout>