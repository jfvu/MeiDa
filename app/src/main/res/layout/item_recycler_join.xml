<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="146px"
    android:layout_marginTop="12px"
    android:layout_marginRight="12px"
    android:layout_marginLeft="12px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/itembg3x">

        <ImageView
            android:id="@+id/img_tag_recyclerjoin_item"
            android:layout_width="20px"
            android:layout_height="28px"
            android:layout_marginLeft="12px"
            android:layout_marginTop="-5px"
            android:background="@mipmap/gaoshangjin3x" />

        <ImageView
            android:id="@+id/img_head_recyclerjoin_item"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginLeft="17px"

            android:layout_marginTop="35px"
            android:src="@mipmap/touxiang3x" />

        <TextView
            android:id="@+id/tv_title_recyclejoin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginRight="21px"
            android:layout_marginTop="16px"
            android:layout_toRightOf="@id/img_head_recyclerjoin_item"
            android:text="这是标题这是标题这是标题"
            android:textSize="16px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content_recyclerjoin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_recyclejoin_item"
            android:layout_marginLeft="16px"
            android:layout_marginRight="21px"
            android:layout_marginTop="6px"
            android:layout_toRightOf="@id/img_head_recyclerjoin_item"
            android:gravity="left"
            android:text="这是说明这是说明这是说明这是说明这是说明这是说明这是说明"
            android:textColor="#787878"
            android:textSize="16px" />

        <TextView
            android:id="@+id/tv_id_recyclerjoin_item"
            android:layout_width="58px"
            android:layout_height="20px"
            android:layout_below="@id/img_head_recyclerjoin_item"
            android:layout_marginLeft="12px"
            android:layout_marginTop="3px"
            android:gravity="center"
            android:text="美哒医生"
            android:textSize="14px" />

        <View
            android:id="@+id/view_line_recycle"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_id_recyclerjoin_item"
            android:layout_marginBottom="8px"
            android:layout_marginLeft="12px"
            android:layout_marginRight="12px"
            android:background="@drawable/shape_line" />

        <ImageView
            android:id="@+id/img_money_recyclejoin_item"
            android:layout_width="13px"
            android:layout_height="13.7px"
            android:layout_below="@id/view_line_recycle"
            android:layout_marginBottom="15.3px"
            android:layout_marginLeft="23px"
            android:src="@mipmap/jinbi3x" />

        <TextView
            android:id="@+id/tv_money_recyclerjoin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_recycle"
            android:layout_marginBottom="12px"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@id/img_money_recyclejoin_item"
            android:text="15"
            android:textColor="#FB8E11"
            android:textSize="13px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_time_recyclerjoin_item"
            android:layout_width="9px"
            android:layout_height="11px"
            android:layout_below="@id/view_line_recycle"
            android:layout_marginTop="2px"
            android:layout_marginLeft="22px"
            android:layout_toRightOf="@id/tv_money_recyclerjoin_item"
            android:src="@mipmap/shichang3x" />

        <TextView
            android:id="@+id/tv_time_recyclerjoin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_recycle"
            android:layout_marginBottom="13px"
            android:layout_marginLeft="3px"
            android:layout_toRightOf="@id/img_time_recyclerjoin_item"
            android:text="12min35s"
            android:textColor="#FE2F2F"
            android:textSize="13px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_looknumber_recyclerjoin_item"
            android:layout_width="24px"
            android:layout_height="20px"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_line_recycle"
            android:layout_marginBottom="12px"
            android:layout_marginRight="12px"
            android:text="154"
            android:textColor="#CDCDCD"
            android:textSize="13px" />

        <ImageView
            android:id="@+id/img_looknumber_recyclerjoin_item"
            android:layout_width="14px"
            android:layout_height="10px"
            android:layout_below="@id/view_line_recycle"
            android:layout_marginRight="3.5px"
            android:layout_marginTop="3px"
            android:layout_toLeftOf="@id/tv_looknumber_recyclerjoin_item"
            android:background="@mipmap/yueduliang3x" />

        <TextView
            android:id="@+id/tv_peoplenumber_recyclerjoin_item"
            android:layout_width="24px"
            android:layout_height="20px"
            android:layout_below="@id/view_line_recycle"
            android:layout_marginBottom="12px"
            android:layout_marginRight="16px"
            android:layout_toLeftOf="@id/img_looknumber_recyclerjoin_item"
            android:text="154"
            android:textColor="#CDCDCD"
            android:textSize="13px" />

        <ImageView
            android:id="@+id/img_peoplenumber_recyclerjoin_item"
            android:layout_width="11.5px"
            android:layout_height="10px"
            android:layout_below="@id/view_line_recycle"

            android:layout_marginRight="3.5px"
            android:layout_marginTop="3px"
            android:layout_toLeftOf="@id/tv_peoplenumber_recyclerjoin_item"
            android:background="@mipmap/renshu3x" />
    </RelativeLayout>

</LinearLayout>